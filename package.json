{
  "name": "@dotvirus/yxc",
  "version": "2.0.3",
  "description": "Schema validation with composition & API middlewares",
  "main": "dist/yxc.min.js",
  "typings": "index.d.ts",
  "files": [
    "dist/yxc.min.js",
    "index.d.ts"
  ],
  "scripts": {
    "pretranspile": "rm -rf typings",
    "transpile": "tsc -p build.tsconfig.json",
    "posttranspile": "npm run build:typings",
    "build:umd": "rollup --config",
    "build:typings": "rollup --config rollup.dts.config.js",
    "doc": "typedoc --out docs src && touch docs/.nojekyll",
    "coverage": "nyc npm test",
    "postcoverage": "nyc report --reporter=json",
    "babel": "babel dist/yxc.js -o dist/yxc.es5.js",
    "build": "npm run transpile && npm run build:umd && npm run babel && npm run minify",
    "minify": "uglifyjs dist/yxc.es5.js --compress --mangle > dist/yxc.min.js",
    "test:verbose": "cross-env YXC_DEBUG=yxc npm test",
    "test": "mocha --exit -r ts-node/register test/**/*.spec.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --fix --ext .ts",
    "prebuild": "rm -rf dist && rm -rf build",
    "postbuild": "rm -rf build"
  },
  "author": "dotvirus",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dotvirus/yxc.git"
  },
  "keywords": [
    "validation",
    "api",
    "express",
    "koa",
    "middleware",
    "graphql",
    "schema"
  ],
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "uglify-js": "^3.10.4",
    "rollup": "^2.26.11",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-dts": "^1.4.13",
    "rollup-plugin-node-resolve": "^5.2.0",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.1",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^3.6.1",
    "chai": "^4.2.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^8.0.0",
    "mocha": "^8.0.1",
    "nyc": "^15.1.0",
    "ts-node": "^9.0.0",
    "typedoc": "^0.19.1",
    "typescript": "^4.0.2"
  },
  "dependencies": {}
}
